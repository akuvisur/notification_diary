<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.aware.plugin.notificationdiary.Tutorial.TutorialActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@drawable/dropshadow">

        <Button
            android:text="Skip Tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tutorial_skip_button"
            android:background="@drawable/diary_button_rounded"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="#FFFFFF"/>

        <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tutorial_next_button"
            android:background="@drawable/diary_button_rounded"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:text="Tutorial"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:id="@+id/tutorial_title"
            android:layout_toEndOf="@+id/tutorial_skip_button"
            android:layout_toStartOf="@+id/tutorial_next_button"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tutorial_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:background="#FFFFFF">


    </ScrollView>

</LinearLayout>
