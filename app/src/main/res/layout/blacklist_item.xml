<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Application name"
        android:id="@+id/blacklist_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/blacklist_remove"
        android:layout_toStartOf="@+id/blacklist_remove" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blacklist_remove"
        android:background="@mipmap/delete_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Application package"
        android:id="@+id/blacklist_package"
        android:layout_alignStart="@+id/blacklist_name"
        android:layout_alignBottom="@+id/blacklist_name"
        android:layout_toStartOf="@+id/blacklist_remove" />


</RelativeLayout>