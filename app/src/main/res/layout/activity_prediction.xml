<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.aware.plugin.notificationdiary.PredictionActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:padding="6dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/predact_rejectall"
            android:layout_gravity="left"
            android:text="REJECT ALL"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/diary_button_rounded"
            android:textSize="14sp"
            android:padding="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total # predictions"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryLight"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/predact_rejectall"
            android:layout_toStartOf="@+id/predact_acceptall"
            android:id="@+id/num_predictions"
            android:layout_marginLeft="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/predact_acceptall"
            android:layout_gravity="right"
            android:text="ACCEPT ALL"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/diary_button_rounded"
            android:textSize="14sp"
            android:padding="6dp"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/predact_prediction_list"
        android:padding="6dp"
        android:background="#DDDDDD"/>
</LinearLayout>
